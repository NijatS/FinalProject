@model IEnumerable<Staff>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name:</th>
                <th scope="col">Position:</th>
                <th scope="col" class="text-center">Photo:</th>
                <th scope="col" class="text-center">Show && Add Social</th>
                <th scope="col" class="text-center">Update</th>
                <th scope="col" class="text-center">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.FullName</th>
                    <th>@item.Position.Name</th>
                    <th class="text-center"><img style="width:100px;height:100px;border-radius:50%" src="~/Images/Staffs/@item.Image" /></th>
                    <td class="text-center" >
                        <a asp-controller="Staff" asp-action="social"  asp-route-id="@item.Id" style="margin-right: 25px;text-decoration:none">
                            <i class="fa-solid fa-eye text text-secondary"></i>
                        </a>
                        <a asp-controller="Social" asp-action="create" >
                            <i class="fa-solid fa-share-nodes text text-warning"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a asp-controller="Staff" asp-action="update" asp-route-id="@item.Id">
                            <i class="fas fa-edit text text-primary"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a onclick="if(!confirm('Are you sure?')){return false;}"
                           asp-controller="Staff" asp-action="remove" asp-route-id="@item.Id"
                           class=" delete-item"><i class="fas fa-trash text text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <ul class="pagination">
        <li><a class=" page-link" asp-controller="Staff" asp-action="index" asp-route-page="1">«</a></li>
        @for (int i = 1; i <= ViewBag.TotalPage; i++)
        {
            @if (i == ViewBag.CurrentPage)
            {
                <li class="page-item active"><a class=" page-link" asp-controller="Staff" asp-action="index" asp-route-page="@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class=" page-link" asp-controller="Staff" asp-action="index" asp-route-page="@i">@i</a></li>
            }
        }
        <li><a class="page-link" asp-controller="Staff" asp-action="index" asp-route-page="@ViewBag.TotalPage">»</a></li>
    </ul>
    <div>
        <a asp-controller="Staff" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a>
            <div style="width:100%; " class="btn btn-outline-success">Create Staff </div>
        </a>
    </div>
</div>
