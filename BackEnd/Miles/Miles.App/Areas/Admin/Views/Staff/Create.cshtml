@model StaffPostDto
<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
			<label asp-for="FullName">FullName:</label>
			<input type="text" class="form-control" asp-for="FullName" />
			<span asp-validation-for="FullName" class="text text-danger"></span>
	</div>
		<div class="form-group">
			<label asp-for="Info">Info:</label>
			<input type="text" class="form-control" asp-for="Info" />
			<span asp-validation-for="Info" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PositionId">Position</label>
			<select asp-for="PositionId" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Positions)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="PositionId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.file">Photo:</label>
			<input type="file" class="form-control" asp-for="@Model.file" />
			<span asp-validation-for="file" class="text text-danger"></span>
		</div>
			@Html.AntiForgeryToken()
		<button type="submit" style="width:100%; " class="btn btn-outline-dark">Create</button>
	</form>
</div>