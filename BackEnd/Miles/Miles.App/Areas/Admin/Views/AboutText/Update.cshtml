@model AboutTextUpdateDto

<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group">
			<label asp-for="Title">Title:</label>
			<input type="text" class="form-control" asp-for="Title" />
			<span asp-validation-for="Title" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="SubTitle">SubTitle:</label>
			<input class="form-control" asp-for="SubTitle" />
			<span asp-validation-for="SubTitle" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Text">Text:</label>
			<textarea class="form-control" asp-for="Text"></textarea>
			<span asp-validation-for="Text" class="text text-danger"></span>
		</div>
			@Html.AntiForgeryToken()
		<button type="submit" style="width:100%; " class="btn btn-outline-info">Update</button>
	</form>
</div>