@model FeaturePostDto
<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
		    <label asp-for="Name" >Name:</label>
			<input type="text" class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
	</div>
		<div class="form-group">
				<input type="radio" asp-for="Icon" value="true" />
				<label for="contactChoice1">Activ</label>
			   <input type="radio" asp-for="Icon" value="false" />
				<label for="contactChoice2">Deactiv</label>
	</div>
		<div class="form-group">
			<label asp-for="UserPricingId">User Pricing</label>
			<select asp-for="UserPricingId" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.UserPricings)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="UserPricingId" class="text text-danger"></span>
		</div>
			@Html.AntiForgeryToken()
		<button type="submit" style="width:100%; " class="btn btn-outline-dark">Create</button>
	</form>
</div>