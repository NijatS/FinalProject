@model AdminDto

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>

                <input type="text"  asp-for="Name" class="form-control" />
                <span class="text text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Surname</label>
                <input type="text"  asp-for="Surname" class="form-control" />
                <span class="text text-danger" asp-validation-for="Surname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>

                <input type="email" asp-for="Email" class="form-control" />
                <span class="text text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserName">UserName</label>

                <input  asp-for="UserName" class="form-control" />
                <span class="text text-danger" asp-validation-for="UserName"></span>
            </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span class="text text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="CountryId">Country</label>
            <select asp-for="CountryId" class="form-select" aria-label="Default select example">
                <option selected value="0">Select one of them</option>
                @foreach (var item in ViewBag.Countries)
                {
                    <option value="@item.Id" style="background-image:url(~/Images/Countries/@item.FlagImage);">@item.Name</option>
                }
            </select>
            <span asp-validation-for="CountryId" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="file">Photo</label>
            <input asp-for="file" class="form-control" type="file" />
            <span class="text text-danger" asp-validation-for="file"></span>

               </div>
        <div class="button-box">
            <div class="login-toggle-btn">

            </div>
            <button type="submit" style="width:100%; " class="btn btn-outline-dark">Create</button>

        </div>
    </form>
</div>
