@model Message

<div class="container">
	<form method="get" enctype="multipart/form-data">
		<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
			<label asp-for="FirstName">FirstName:</label>
			<input type="text" disabled class="form-control" asp-for="FirstName" />
	</div>
		<div class="form-group">
			<label asp-for="Email">Email:</label>
			<input type="text" disabled class="form-control" asp-for="Email" />
		</div>
		<div class="form-group">
			<label asp-for="Address">Address:</label>
			<input type="text" disabled class="form-control" asp-for="Address" />
		</div>
		<div class="form-group">
			<label asp-for="Phone">Phone:</label>
			<input type="text" disabled class="form-control" asp-for="Phone" />
		</div>
		<div class="form-group">
			<label asp-for="Text">Text:</label>
			<textarea style="height:150px"  disabled class="form-control" asp-for="Text"></textarea>
			
		</div>
		<button asp-action="index" asp-controller="message" style="width:100%; " class="btn btn-outline-dark">Exit</button>

			@Html.AntiForgeryToken()
	</form>
</div>