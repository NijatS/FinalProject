@model RegisterDto
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Register</h1>
                <div class="line"></div>
                <span>
                    Praesent volutpat nisi sed imperdiet facilisis felis turpis
                    fermentum lectus
                </span>
                <div class="pages">
                    <ul>
                        <li>
                            <a asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li><i class="fa fa-dot-circle-o"></i></li>
                        <li>
                            <a style="color: #f4c23d;" asp-action="signup" asp-controller="account">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="page">
    <section class="register-area">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="register-container">
                        <div class="register-text">
                            <h2>regitser</h2>
                            <span>Please register using account detail bellow.</span>
                        </div>
                        <div class="register-form">
                            <form method="post" enctype="multipart/form-data">
                                <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                                <span class="text text-danger" asp-validation-for="Name"></span>
                                <input asp-for="Name" placeholder="Name" />
                                <span class="text text-danger" asp-validation-for="Surname"></span>
                                <input asp-for="Surname" placeholder="Surname" />
                                <span class="text text-danger" asp-validation-for="UserName"></span>
                                <input asp-for="UserName" placeholder="Username" />
                                <span class="text text-danger" asp-validation-for="Email"></span>
                                <input asp-for="Email" placeholder="Email" />
                                <span class="text text-danger" asp-validation-for="Password"></span>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                <input asp-for="ConfirmPassword"
                                       placeholder="Confirm Password" />
                                <span class="text text-danger" asp-validation-for="file"></span>
                                <input asp-for="file"
                                       placeholder="Photo"  style="height:max-content;padding:0;"/>
                             @*    <select name="">
                                    <option value="0">Select of them</option>
                                    <option value="">Buyer</option>
                                    <option value="">Seller</option>
                                </select> *@
                                <div class="button-box">
                                    <div class="register-toggle-btn">
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">
                                        Register
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>