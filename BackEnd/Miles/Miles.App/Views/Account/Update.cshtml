@model UpdateDto
@section Title
    {
    Update User
}
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Update</h1>
                <div class="line"></div>
                <span>
                    Praesent volutpat nisi sed imperdiet facilisis felis turpis
                    fermentum lectus
                </span>
                <div class="pages">
                    <ul>
                        <li>
                            <a asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li><i class="fa fa-dot-circle-o"></i></li>
                        <li>
                            <a style="color: #f4c23d;" asp-action="update" asp-controller="account">Update</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="page">
    <section class="register-area">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="register-container">
                        <div class="register-text">
                            <h2>update</h2>
                            <span>Please update using account detail bellow.</span>
                        </div>
                        <div class="register-form">
                            <form method="post" enctype="multipart/form-data">
                                <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                                <span class="text text-danger" asp-validation-for="Name"></span>
                                <input asp-for="Name" placeholder="Name" />
                                <span class="text text-danger" asp-validation-for="Surname"></span>
                                <input asp-for="Surname" placeholder="Surname" />
                                <span class="text text-danger" asp-validation-for="UserName"></span>
                                <input asp-for="UserName" placeholder="Username" />
                                <span class="text text-danger" asp-validation-for="Email"></span>
                                <input asp-for="Email" placeholder="Email" />
                                <span class="text text-danger" asp-validation-for="CurrentPassword"></span>
                                <input asp-for="CurrentPassword" placeholder="CurrentPassword" />
                                <span class="text text-danger" asp-validation-for="Password"></span>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                <input asp-for="ConfirmPassword"
                                       placeholder="Confirm Password" />
                                <div class="form-group" style="display:flex; align-items:center; gap:15px; margin-bottom:20px;">
                                    <img style="width:50px;height:50px;border-radius:50%;"  src="~/Images/Users/@Model.Image"/>
                                    <div>
                                           <span class="text text-danger" asp-validation-for="file"></span>
                                            <input asp-for="file"
                                       placeholder="Photo"  style="height:max-content;padding:0;margin:0"/>
                                    </div>
                                 </div>
                                <div class="form-group">
                                    <label asp-for="CountryId">Country</label>
                                    <select asp-for="CountryId" class="form-select" aria-label="Default select example">
                                        <option value="0">Choose one of them</option>
                                        @foreach (var item in ViewBag.Countries)
                                        {
                                            if (Model.CountryId != null)
                                            {
                                                if (Model.CountryId == item.Id)
                                                {
                                                    <option selected value="@item.Id">@item.Name</option>
                                                    continue;
                                                }
                                            }
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CountryId" class="text text-danger"></span>
                                </div>
                                <div class="button-box">
                                    <button type="submit" class="default-btn">
                                        Update
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>