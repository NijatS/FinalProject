@model BlogVM
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Our Blogs</h1>
                <div class="line"></div>
                <span>
                    Praesent volutpat nisi sed imperdiet facilisis felis turpis
                    fermentum lectus
                </span>
                <div class="pages">
                    <ul>
                        <li>
                            <a href="http://demo.mypsolution.com/wp13/">Home</a>
                        </li>
                        <li><i class="fa fa-dot-circle-o"></i></li>
                        <li>
                            <a href="http://demo.mypsolution.com/wp13/services/">Blogs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="blog-page section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 main-block">
                <div class="blog-item">
                    <a href="#">
                        <img src="~/Images/Blogs/@Model.Blog.Image" alt="" />
                    </a>
                    <div class="content">
                        <div class="info">
                            <ul>
                                <li>@Model.Blog.CreatedAt.Day/@Model.Blog.CreatedAt.Month/@Model.Blog.CreatedAt.Year</li>
                                <li>
                                    Posted by
                                    <a href="#">@Model.Blog.Author</a>
                                </li>
                            </ul>
                            <div class="title">
                                <a href="#">
                                    <h2>@Model.Blog.Title</h2>
                                </a>
                            </div>
                        </div>
                        <div class="text">
                            @if (Model.Blog.Description.Length >= 250)
                            {
                                <p>
                                    @Model.Blog.Description.Substring(0,250)...
                                </p>
                                <h6>Nam porttitor metus vitae faucibus cursus</h6>
                                <p>
                                    @Model.Blog.Description.Substring(250,Model.Blog.Description.Length-250)

                                </p>
                            }
                            else
                            {
                                <p>
                                    @Model.Blog.Description...
                                </p>
                            }

                            <blockquote>
                                <p>
                                   @Model.Blog.Comment
                                </p>
                            </blockquote>
                         
                        </div>
                    </div>
                </div>
                <div class="author">
                    <div class="share-button">
                        <a href="#">Share Post</a>
                    </div>
                    <img style="width:55px;height:55px;" src="~/Images/Blogs/Authors/@Model.Blog.AuthorImage" alt="" />
                    <span>written by</span>
                    <h4 class="author-name">@Model.Blog.Author</h4>
                </div>
                <div class="col-sm-12">
                    <div class="empty"></div>
                </div>
                <div class="leave-comment">
                    <div>
                        <h2>Leave a comment</h2>
                        <form method="post" class="leave-comment-form row">
                            <div class="col-md-6">
                                <input type="text" placeholder="Your name" />
                            </div>
                            <div class="col-md-6">
                                <input type="email" placeholder="Your email" />
                            </div>
                            <div class="col-md-12">
                                <input type="text" placeholder="Subject" />
                            </div>
                            <div class="col-md-12">
                                <textarea placeholder="Your message here..."></textarea>
                            </div>
                            <div class="col-md-12">
                                <div class="button">
                                    <button type="submit">Post Comment</button>
                                    <span></span>
                                    <i class="fa fa-paper-plane"></i>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4 sidebar-block">
                <div class="sidebar-blog search-blog">
                    <form method="get" role="search">
                        <div>
                            <input type="text" placeholder="Search for:" />
                            <button type="submit">Search</button>
                        </div>
                    </form>
                </div>
                <div class="sidebar-blog category-blog">
                    <h4>Categories</h4>
                    <ul>
                        @foreach (var item in Model.Categories)
                        {
                            <li class="category-item">
                                <a asp-action="index" asp-controller="blog" asp-route-id="@item.Id">@item.Name<span> (@item.BlogCategories.Count) </span></a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="sidebar-blog post-blog">
                    <h4>Recent Post</h4>
                    @foreach (var item in Model.Blogs.Take(2).OrderByDescending(x => x.CreatedAt))
                    {
                        <div class="post-item">
                            <img src="~/Images/Blogs/@item.Image" alt="" />
                            <h6>
                                <a asp-action="detail" asp-controller="blog" asp-route-id="@item.Id">@item.Title</a>
                            </h6>
                            <ul>
                                <li>@item.CreatedAt.Day/@item.CreatedAt.Month/@item.CreatedAt.Year</li>
                                <li>0 comments</li>
                            </ul>
                        </div>

                    }
                </div>
                <div class="sidebar-blog tags-blog">
                    <h4>TAGS</h4>
                    <div class="tags">
                        @foreach (var item in Model.Tags)
                        {
                            <a href="#">@item.Name</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>