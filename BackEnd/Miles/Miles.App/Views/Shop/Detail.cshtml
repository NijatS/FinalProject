@model ShopVM
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.Car.Model.Brand.Name @Model.Car.Model.Name @Model.Car.FabricationYear</h1>
                <div class="line"></div>
                <span> Lorem ipsum dolor sit amet </span>
                <div class="pages">
                    <ul>
                        <li>
                            <a asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li><i class="fa fa-dot-circle-o"></i></li>
                        <li>
                            <a style="color: #f4c23d;" asp-action="index" asp-controller="shop">Shop</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="car-detail section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="product-container">
                    <div class="product">
                        <div>
                            <div class="content">
                                <h1>@Model.Car.Model.Brand.Name @Model.Car.Model.Name</h1>
                                <p class="price">
                                    <span>$@Model.Car.Price.ToString("#,##0")</span>
                                </p>
                            </div>
                            <div class="images">
                                <figure>
                                    <div class="sliders">
                                        <div class="viewport">
                                            <ul class="slides">
                                                    @foreach (var item in @Model.Car.CarImages)
                                                    {
                                                    <li>
                                                        <div>
                                                            <a href="">
                                                                <img src="~/Images/Cars/@item.Image" alt="" />
                                                            </a>
                                                            <img src="~/Images/Cars/@item.Image" alt="" />
                                                        </div>
                                                    </li>
                                                    }
                                            </ul>
                                        </div>
                                        <ol>
                                               @foreach (var item in @Model.Car.CarImages)
                                                    {
                                            <li>
                                                    <img src="~/Images/Cars/@item.Image"
                                                     draggable="false" />
                                            </li>
                                                    }
                                        </ol>
                                        <ul class="direction-nav">
                                            <li>
                                                <a class="nav-prev"
                                                   onclick="return false;"
                                                   href="#">Previous</a>
                                            </li>
                                            <li>
                                                <a class="nav-next"
                                                   onclick="return false;"
                                                   href="#">Next</a>
                                            </li>
                                        </ul>
                                    </div>
                                </figure>
                            </div>
                        </div>
                        <div class="tabs">
                            <ul>
                                <li>
                                    <a href="#" onclick="return false;">Description</a>
                                </li>
                                <li>
                                    <a href="#" onclick="return false;">Additional information</a>
                                </li>
                                <li>
                                    @if(Model.Comments is null)
                                    {
                                        <a href="#" onclick="return false;">Reviews (0)</a>

                                    }
                                    else{
                                    <a href="#" onclick="return false;">Reviews (@Model.Comments.Count())</a>
                                    }
                                </li>
                            </ul>
                            <div class="description info">
                                <h2>Description</h2>
                                <section class="kc-row">
                                    <div class="row-container">
                                        <div class="wrap-columns">
                                            <div class="kc-column">
                                                <div>
                                                    <div class="text" style="word-wrap:break-word;">
                                                        <p>
                                                      @Model.Car.Description.Substring(0,250)
                                                        </p>
                                                        <p>
                                                            @Model.Car.Description.Substring(250,Model.Car.Description.Length-250)

                                                        </p>
                                                    </div>
                                                    <div class="kc-row-inner">
                                                        <div class="kc-column-inner">
                                                            <div class="text">
                                                                <h4>Enterainment</h4>
                                                                <ul>
                                                                    <li>Central Locking</li>
                                                                    <li>Automatic Air Conditioning</li>
                                                                    <li>Full Leather Interior</li>
                                                                    <li>Electric Heated Seats</li>
                                                                    <li>Navigation GPS Multimedia</li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <div class="kc-column-inner">
                                                            <div class="text">
                                                                <h4>Exterior features</h4>
                                                                <ul>
                                                                    <li>Parking Sensors</li>
                                                                    <li>Double Exhaust</li>
                                                                    <li>Electric Mirrors</li>
                                                                    <li>Manifacturing Year 2015</li>
                                                                    <li>Full Service History</li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <div class="kc-column-inner">
                                                            <div class="text">
                                                                <h4>Interior features</h4>
                                                                <ul>
                                                                    <li>ABS</li>
                                                                    <li>Xenon Headlights</li>
                                                                    <li>Immobilizer</li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="additional info">
                                <h2>Additional information</h2>
                                <table>
                                    <tbody>
                                        <tr>
                                            <th>Car Types</th>
                                            <td><p>@Model.Car.Ban.Name</p></td>
                                        </tr>
                                        <tr>
                                            <th>Color</th>
                                            <td><p>@Model.Car.Color.Name</p></td>
                                        </tr>
                                        <tr>
                                            <th>Makes</th>
                                            <td><p>@Model.Car.Model.Brand.Name</p></td>
                                        </tr>
                                        <tr>
                                            <th>Car Model</th>
                                            <td><p>@Model.Car.Model.Name</p></td>
                                        </tr>
                                        <tr>
                                            <th>Fuel</th>
                                            <td><p>@Model.Car.Fuel.Name</p></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="reviews info">
                                <div class="comments">
                                    <h2>Reviews</h2>
                                    @if (Model.Comments.Count() == 0)
                                    {
                                        <p>There are no reviews yet.</p>
                                    }
                                </div>
                                <div class="review-form">
                                    <div>
                                            @if (Model.Comments.Count() ==0)
                                    {
                                        <h3>Be the first to review “@Model.Car.Model.Brand.Name @Model.Car.Model.Name”</h3>
                                    }
                                        <form method="post" asp-action="PostComment" asp-controller="Blog">
                                            <p>
                                                <span id="email-notes">
                                                    Your email address will not be published.
                                                    Required fields are marked *
                                                </span>
                                            </p>
                                            <p>
                                                <input 
                                                       style="display:none;"
                                                       name="carID"
                                                       value="@Model.Car.Id"
                                                       aria-required="true" />
                                            </p>
                                            <p>
                                                <input placeholder="Subject"
                                                       type="text"
                                                       name="subject"
                                                       size="30"
                                                       aria-required="true" />
                                            </p>
                                            <p>
                                                <textarea placeholder="Your Review"
                                                          cols="45"
                                                          name ="text"
                                                          rows="8"
                                                          aria-required="true"></textarea>
                                            </p>
                                            <p>
                                                <button type="submit">Submit</button>
                                            </p>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="empty" style="height:max-content">
                                        <h2>Comments</h2>
                                        @foreach (var item in Model.Comments)
                                        {
                                            <div class="comment">
                                                <img src="~/Images/Users/@item.AppUser.Image" />
                                                <div>
                                                    <div class="comment-info">
                                                        <h4>@item.AppUser.Name @item.AppUser.Surname</h4>
                                                        <span>@item.CreatedAt.ToShortDateString()</span>
                                                    </div>
                                                    <span>@item.Subject</span>
                                                    <span>@item.Text</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="detail">
                    <div class="head">
                        <h4>VEHICLE DETAILS</h4>
                    </div>
                    <div class="infoCar">
                        <ul>
                            <li><span>Time Left:</span><span>0D 0H min</span></li>
                            <li><span>Vin:</span>@Model.Car.Vin</li>
                            <li><span>Make:</span>@Model.Car.Model.Brand.Name</li>
                            <li><span>Fabrication Year:</span>@Model.Car.FabricationYear</li>
                            <li><span>Odometer:</span>@Model.Car.Odometer.ToString("#,##0")km</li>
                            <li><span>Fuel Type:</span>@Model.Car.Fuel.Name</li>
                            <li><span>No. of Gears:</span>@Model.Car.NoGears</li>
                            <li><span>Transmission:</span>@Model.Car.Transmission</li>
                            <li><span>Color:</span>@Model.Car.Color.Name</li>
                            <li><span>Fuel Economy:</span>@Model.Car.FuelCity l/City - @Model.Car.FuelWay l/hwy</li>
                            <li><span>Motor:</span>@Model.Car.Motor</li>
                            <li>
                                <span>Country of Origin:</span>Germany ( Munich )
                            </li>
                            <li><span>Price:</span>$@Model.Car.Price.ToString("#,##0")</li>
                        </ul>
                    </div>
                </div>
                <div class="enquiry">
                    <div class="head">
                        <h4>VEHICLE ENQUIRY</h4>
                    </div>
                    <div class="contact-form">
                        <form action="" method="post">
                            <p>
                                The dealer's details will be emailed to you
                                immediately after you submit your query.
                            </p>
                            <p>
                                <label>
                                    <input type="text"
                                           size="40"
                                           aria-required="true"
                                           aria-invalid="false"
                                           placeholder="Your Name" />
                                </label>
                                <label>
                                    <input type="email"
                                           size="40"
                                           aria-required="true"
                                           aria-invalid="false"
                                           placeholder="Your Email" />
                                </label>
                                <label>
                                    <input type="text"
                                           size="40"
                                           aria-required="true"
                                           aria-invalid="false"
                                           placeholder="Your Phone Number" />
                                </label>
                                <label>
                                    <textarea cols="40"
                                              rows="10"
                                              aria-invalid="false"
                                              placeholder="Message..."></textarea>
                                </label>
                            </p>
                            <div class="button">
                                <button type="submit">Send Message</button>
                                <span></span>
                                <i class="fa fa-paper-plane"></i>
                            </div>
                        </form>
                    </div>
                    <div class="auction">
                        <div class="circle"></div>
                        <div class="bid">
                            <input type="text" disabled value="$3,600" />
                            <div class="buttons">
                                <button>-</button>
                                <button>+</button>
                            </div>
                            <button id="bidButton" type="submit">Bid</button>
                            <audio id="audio" src="~/Audio/click.wav"></audio>
                            <audio id="audioWin" src="~/Audio/win.mp3"></audio>
                        </div>
                    </div>
                    <div class="subhead">
                        <h4>Contact the Seller</h4>
                        <div class="number">
                            <h6>(+994)70-613-90-13</h6>
                            CAR CODE:
                            <span>@Model.Car.Id</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="feature-listing section">
    <div class="kc-row-container">
        <div class="kc-wrap-columns">
            <div class="feature-column col-sm-12">
                <div>
                    <div class="header">
                        <h2>Recent Vehicles</h2>
                        <span>
                            Vivamus gravida magna massa in cursus mi vehicula at.
                            Nunc sem quam suscipit
                        </span>
                        <div class="dec">
                            <i class="fa fa-car"></i>
                        </div>
                        <div class="line-dec"></div>
                    </div>
                    <div class="cars">
                        <div class="cars-container">
                            @foreach(var item in Model.Cars.Take(4))
                            {
                                <div class="car-card col-md-15 col-sm-6">
                                    <a asp-action="detail" asp-controller="shop" asp-route-id="@item.Id">
                                        @foreach(var photo in item.CarImages){
                                            if(photo.isMain){
                                             <img src="~/Images/Cars/@photo.Image"
                                             class="attachment-shop_catalog size-shop_catalog wp-post-image"
                                             srcset="
                                                    ~/Images/Cars/@photo.Image        310w,
                                                   ~/Images/Cars/@photo.Image 300w
                                                     "
                                             style="height:180px;"
                                             sizes="(max-width: 310px) 100vw, 310px" />
                                             }
                                             }
                                    </a>
                                    <div class="content">
                                        <span class="pricee">
                                            <span class="price">$@item.Price.ToString("#,##0")</span>
                                        </span>
                                        <a href="">
                                            <h2>@item.Model.Name @item.FabricationYear</h2>
                                        </a>
                                        <div class="line"></div>
                                        <div class="car-info"
                                        style="word-wrap:break-word;">
                                            @item.Description.Substring(0,50)...
                                        </div>
                                        <div class="car-detail">
                                            <ul>
                                                <li><i class="fas fa-gas-pump"></i>@item.Fuel.Name</li>
                                                <li><i class="fa fa-car"></i>@item.Ban.Name</li>
                                                <li><i class="fas fa-road"></i>@item.Odometer.ToString("#,##0")</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/JavaScript/shop-detail.js"></script>