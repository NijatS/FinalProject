@model AboutVM
@section Title
{
  About
}
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>About Us</h1>
                <div class="line"></div>
                <span>
                    The work we do, our team and users' feedbacks
                </span>
                <div class="pages">
                    <ul>
                        <li>
                            <a asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li><i class="fa fa-dot-circle-o"></i></li>
                        <li>
                            <a style="color: #f4c23d;" asp-action="index" asp-controller="about">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="page">
    <section class="about-text section">
        <div class="row-container">
            <div class="wrap-columns">
                <div class="kc-column">
                    <div>
                        <div class="kc-row-inner">
                            <div class="kc-column-inner">
                                <div class="left-about">
                                    <div>
                                        <h2>@Model.AboutText.Title</h2>
                                        <p><span>@Model.AboutText.SubTitle</span></p>
                                        <p>
                                          @Model.AboutText.Text.Substring(0,250)
                                        </p>
                                        <p>
                                            @Model.AboutText.Text.Substring(250,Model.AboutText.Text.Length-250)
                                        </p>
                                        <p><a href="#">Read More</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="kc-column-inner">
                                <div class="right-about">
                                    @foreach(var item in Model.AboutSkills.Take(5)){
                                    <div class="skillbar clearfix">
                                        <div class="skillbar-title">
                                            <h6>@item.Name</h6>
                                            <span>(@item.Degree%)</span>
                                        </div>
                                        <div class="skillbar-bar" style="width:@item.Degree%"></div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="team-member section">
        <div class="row-container">
            <div class="wrap-columns">
                <div class="kc-column">
                    <div class="kc-col-container">
                        <div class="header text-center">
                            <h2>Meet the team</h2>
                            <span>
                                Out team
                            </span>
                            <div>
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="line"></div>
                        </div>
                        <div class="team-cards kc-row-inner">
                            @foreach(var item in Model.Staffs.Take(4)){
                            <div class="kc-column-inner">
                                <div>
                                    <div class="team-member text-center">
                                        <img alt=""
                                             src="~/Images/Staffs/@item.Image" style="height:220px; width:220px;"/>
                                        <div class="socials">
                                            <div class="line"></div>
                                            <p>@item.Info</p>
                                            <ul>
                                                    @foreach(var social in item.Socials.Where(x=>!x.IsDeleted).Take(4))
                                                    {
                                                        <li>
                                                            <a href="@social.Link">
                                                                <i class="fa fa-@social.Icon"></i>
                                                            </a>
                                                        </li>
                                                    }
                                            </ul>
                                        </div>
                                        <div class="info">
                                            <h2>@item.FullName</h2>
                                            <span>@item.Position.Name</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="user-comment section">
        <div class="row-container">
            <div class="wrap-columns">
                <div class="kc-column">
                    <div class="kc-col-container">
                        <div class="header text-center">
                            <h2>User Comments</h2>
                            <span>
                                Users' feedback from blogs and cars about cars and auctions
                            </span>
                            <div>
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="line"></div>
                        </div>
                        <div class="user-cards kc-row-inner">
                            <div class="kc-column-inner">
                                <div>
                                    <div class="user-carusel">
                                        <div class="user-carusel-outer">
                                            <div class="user-carusel-container">
                                                @foreach(var item in Model.Comments.Where(x => !x.IsDeleted).OrderByDescending(x=>x.CreatedAt).Take(3))
                                                {
                                                    <div class="user-carusel-item">
                                                        <div class="text-center col-md-8">
                                                            <p>
                                                             @item.Text
                                                            </p>
                                                            <img src="~/Images/Users/@item.AppUser.Image"
                                                             style="width:89px;height:89px; border-radius:50%"/>
                                                            <h2>@item.AppUser.Name @item.AppUser.Surname</h2>
                                                            <span>User</span>
                                                        </div>
                                                    </div>

                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="carusel-controls">
                                        <div class="bt-back">
                                            <a class="btn back fa fa-arrow-left"></a>
                                        </div>
                                        <div class="bt-next">
                                            <a class="btn next fa fa-arrow-right"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="swiper sample-slider section">
        <div class="swiper-wrapper">
            @foreach (var item in Model.Associates)
            {
                <div class="swiper-slide"><img src="./Images/Associates/@item.Image" style="height:150px"></div>
            }

        </div>
    </div>
</div>
<script src="~/JavaScript/about.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script src="~/JavaScript/swipper.js"></script>
<script src="~/JavaScript/spinner.js"></script>
